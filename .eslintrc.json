{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [ "error", 4 ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ]
    },
    "globals": {
        "PR": "readonly"
    }
}